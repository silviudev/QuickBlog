<% include ./partials/header%>

<form action="/<%=blogAuthor%>/<%=post._id%>?_method=PUT" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="post[title]">Title</label>
        <input type="text" class="form-control" name="post[title]" value="<%=post.title%>">
    </div> 
    
    <div class="form-group">
        <label for="post[image]">Image</label>
        <input type="text" class="form-control" name="post[image]" value="<%=post.image%>">
    </div>  
    
    <div class="form-group">
        <label for="post[body]">Body</label>
        <div class="field">
            <textarea name="post[body]"><%=post.body%></textarea>
        </div>
    </div>   

    <input type="submit" value="Update Post">
</form>

<% include ./partials/footer%>